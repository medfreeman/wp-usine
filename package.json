    "imagemin": "^5.2.2",
    "img-loader": "^1.3.1",
    "imports-loader": "^0.6.5",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "lodash": "4.16.4",
    "map-stream": "0.0.6",
    "merge-stream": "1.0.0",
    "node-notifier": "4.6.1",
    "node-sass": "^3.10.1",
    "postcss-loader": "^1.0.0",
    "precss": "^1.4.0",
