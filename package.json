    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-loader": "1.6.0",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-react": "6.4.1",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "getcomposer": "^1.3.2",
    "gulp": "3.9.1",
    "gulp-add": "0.0.2",
    "gulp-filter": "4.0.0",
