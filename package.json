{
  "name": "mozaik-theme-starter",
  "description": "WordPress Theme Boilerplate - Build Tools Included :)",
  "version": "4.3.0",
  "author": "Mozaik Ltd.",
  "authorURI": "http://mozaik.com/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MozaikAgency/wp-theme-starter.git"
  },
  "keywords": [
    "mozaik",
    "wordpress",
    "theme",
    "gulp"
  ],
  "scripts": {
    "postinstall": "npm run bower -- install && npm run install:wpcs && npm run prod",
    "install:wpcs": "npm run rimraf -- wpcs && npm run composer -- create-project wp-coding-standards/wpcs:dev-master --no-dev --keep-vcs",
    "test": "npm run lint:js && npm run lint:php",
    "lint:js": "eslint ./assets/js/**/*.jsx? ./gulp/**/*.js",
    "lint:php": "npm run phpcs -- --extensions=php",
    "dev": "gulp",
    "prod": "gulp build",
    "bower": "bower",
    "composer": "php ./node_modules/getcomposer/composer.phar",
    "phpcs": "./wpcs/vendor/bin/phpcs",
    "rimraf": "rimraf"
  },
  "engines": {
    "node": ">=5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel-core": "6.17.0",
    "babel-eslint": "7.0.0",
    "babel-loader": "6.2.5",
    "babel-plugin-import-glob": "^1.0.1",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-stage-2": "6.17.0",
    "bootstrap-webpack": "0.0.5",
    "bower": "^1.7.9",
    "browser-sync": "2.17.5",
    "css-loader": "^0.25.0",
    "cssnano": "^3.8.0",
    "del": "2.2.2",
